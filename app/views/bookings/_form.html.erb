<%= simple_form_for(@booking, url: flat_bookings_path) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :start_date %>
    <%= f.input :end_date %>
    <%= f.input :flat_id, :as => :hidden, :input_html => { :value => @flat.id } %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
